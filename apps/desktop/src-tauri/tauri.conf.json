{
  "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Transcript Seeker",
  "version": "0.1.0",
  "identifier": "com.spoke.app",
  "build": {
    "frontendDist": "../web/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "turbo dev",
    "beforeBuildCommand": "turbo build"
  },
  "app": {
    "windows": [
      {
        "title": "Transcript Seeker",
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
